<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="15dp"
    app:cardCornerRadius="15dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greytheme">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Produt Name"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/underline1"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>

        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/input_design"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Produt Price"
            android:layout_below="@+id/cart_product_name"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/underline1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: 1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/cart_product_image"
                android:layout_marginTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="18sp"
                android:textColor="@color/green"

                android:textStyle="bold"
                android:background="@drawable/underline1"
                android:layout_marginRight="2dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>